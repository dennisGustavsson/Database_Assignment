<UserControl x:Class="CaseManagerApp.MVVM.Views.CasesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaseManagerApp.MVVM.Views" xmlns:viewmodels="clr-namespace:CaseManagerApp.MVVM.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:CasesViewModel}"
             xmlns:models="clr-namespace:CaseManagerApp.MVVM.Models"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

     
            <TextBlock Text="{Binding Title}"
                       FontSize="20"
                   Grid.Row="0"
                       Padding="5"
                       Margin="10"/>
        
        <TextBlock Text="Case ID"
                       FontSize="20"
                   Grid.Row="0"
                   Grid.Column="1"
                       Padding="5"
                       Margin="10"/>
        <ListView Grid.Row="1" ItemsSource="{Binding CaseList}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:CaseModel}">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock HorizontalAlignment="Stretch">
                                <Run Text="{Binding Description}" FontWeight="Bold" FontSize="14"/>
                                <Run Text="{Binding Created}" FontStyle="Italic" FontSize="11"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        
        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>


            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Text="FirstName LastName"
                        Grid.Row="0"
                        Grid.Column="1"
                        Padding="5"
                        Margin="10"/>
                <TextBlock Text="PhoneNumber"
                        Grid.Row="1"
                        Grid.Column="1"
                        Padding="5"
                        Margin="10"/>
                <TextBlock Text="Email"
                        Grid.Row="2"
                        Grid.Column="1"
                        Padding="5"
                        Margin="10"/>
            </StackPanel>

            <Button Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    Padding="8 2"
                    Command="{Binding  SomethingCommand}"
                    Content="something" />

        </Grid>



        
    </Grid>
</UserControl>
